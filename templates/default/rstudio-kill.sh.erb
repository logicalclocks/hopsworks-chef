#!/usr/bin/env bash

help() {
    echo ""
    echo "usage: $0 RSTUDIO_HOME PID PORT"
    echo ""
    exit 1
}


if [ $# -ne 3 ]; then
  help
fi

RSTUDIO_HOME=$1
PID=$2
PORT=$3


function kill_named {
    PID=$(ps aux | grep -i rstudio-server | grep "${PORT}" | grep -v grep | awk '{print $2}')
    if [ "$PID" != "" ] ; then
	kill -9 "$PID" > /dev/null 2>&1
        res=$?
    else
	res=$NOT_FOUND
    fi
    return "$res"
}

echo "Killing input pid: $PID"
kill "$PID" > /dev/null 2>&1
if [ $? -ne 0 ] ; then
    if [ "${RSTUDIO_HOME}" != "" ] ; then
      PID_FILE=${RSTUDIO_HOME}/rstudio.pid
      if [ -f "$PID_FILE" ] ; then
        PID=$(cat "$PID_FILE")
        echo "Killing pid: $PID"
	kill "$PID" > /dev/null 2>&1
	if [ $? -ne 0 ] ; then
	    kill_named
	fi
      else
	kill_named
      fi
    fi
fi
exit $?
